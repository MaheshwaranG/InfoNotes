<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login Page </title>
	<link href="./css/log-page.css" type="text/css" rel="stylesheet" />
 
</head>
<body >
<canvas id='mgBackgroundBubble' class='canvas'></canvas>

<div id="loginForm" class="login-card">
  <div class="card">
    <div>
    <br/>
    </div>
    <div  class="img-close">
      <img src="./images/usertemplate.png" alt="./images/usertemplate.png">
      <!--<span class="closebtn" onclick="this.parentElement.style.display='none'">&times;</span> -->
    </div>
    <br/>
    <% if(typeof status != 'undefined' && status == 1 ) { %>
    <div class="error-text" id="login-error-text" >
    Invalid Username or Password
    </div>
    <% } %>
    <form action="/verify" method="post" autocomplete="on">
      <div class="container">
        <div class="login-input">
          <label for="username"> Username</label>
          </br>
          <input type="text" name="username" class="loginUsernameInput" size="25" maxlength="25" placeholder="User name" pattern="[\S]*" title="Space char Not Accepted" autofocus required />
        </div>
      <br/>
        <div class="login-input">
          <label for="password"> Password</label>
          </br>
          <input type="password" name="Password" class="loginUsernameInput" size="16" maxlength="16" placeholder="Password" autocomplete="off" required />
        </div>
      <br/>
        <div class="login-button">
          <button type="submit" class="login">LogIn</button>
        </div>
      </div>
    </form>
  </div>
  <div class="mg-singup-link">
    <span class="mg-singup-text" onclick="openSignupForm(event)" > Did not have an account Register Here</span>
  </div>
</div>


<% if(typeof status != 'undefined' && status == 2) { %>
        <script>
        var status = <%= status %> 
        statusCheck(status);           
     </script>
    <div class="popup-box-modal" id="success-register" >
      <div class="popup-box-modal-content">
        <div class="popup-register-container">
          <label> Registraction Success!!! </label>
          <button onclick="registrationSuccessHide()"> Click Here to Login >>> </button>
        </div>
      </div>
    </div>
    <% } %>


<!-- singup Form Data -->
<div id="singupForm" class="mg-signup-modal">
  
  <form class="mg-signup-modal-content" action="/signupForm" method="post">
  <span class="mg-signup-modal-close" title="Close Modal" onclick="closeSignupForm()">&times;</span>
    <div class="container">
      <h1 style="color:#16ad1c">Sign Up</h1>
      <div class="error-text" id="signup-error-text">
        
      </div>
      <div class="error-text" id="user-signup-error-text">
        
      </div>
      <hr>
      <label for="username">Domain Name</label><sup class='required-input'>*</sup>
      <input type="text" placeholder="Enter Domain Name" name="username" id="username" size="25" maxlength="25" pattern="[\S]*" title="Space char Not Accepted" onchange="userValidate()" autocomplete="off" autofocus required>
      <br/>
      <br/>
      <label for="username">Domain Mail Id</label><sup class='required-input'>*</sup>
      <input type="email" placeholder="Enter Domain mail" name="email" id="email" size="50" maxlength="50" pattern="[\S]*" title="Space char Not Accepted" required>
      <br/>
      <br/>
      <label for="empId">Employee Id</label><sup class='required-input'>*</sup>
      <input type="text" placeholder="Enter Domain Name" name="empId" id="emp-id" size="6" maxlength="6" pattern="[\S]*" title="Space char Not Accepted" required>
      <br/>
      <br/>
      <label for="gender">Gender</label><sup class='required-input'>*</sup>
      <input type="radio" name="gender" value="male" required> Male
      <input type="radio" name="gender" value="female" required> Female
      <input type="radio" name="gender" value="other" required> Other  
      <br/>
      <br/>
       <label for="userRole">Department</label><sup class='required-input'>*</sup>
      
      <select name="userRole"  id="user-role" require >
        
      </select>
      <br/>
      <br/>
      <label for="password">Password</label><sup class='required-input'>*</sup>
      <input type="password" placeholder="Enter Password" name="password" id="password" size="25" maxlength="16" minlength="6" autocomplete="off" required>
      <br/>
      <br/>
      <label for="pswRepeat">Confirm Password</label><sup class='required-input'>*</sup>
      <input type="password" placeholder="Repeat Password" name="pswRepeat" id="psw-repeat" size="25" maxlength="16" minlength="6" onchange="passCheck()" autocomplete="off" required>
      <br/>
      <br/>
     
     <!--  <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
      </label> -->

     <!--  <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p> -->
      <button type="button" onclick="closeSignupForm()" class="mg-signup-modal-cancelbtn">Cancel</button>
      <button type="submit" class="mg-signup-modal-signup" onclick="return validation(event)">Sign Up</button>
    </div>
  </form>
</div>
 <script src="./js/loginsignup.js" type="text/javascript"></script>
</body>
</html>
