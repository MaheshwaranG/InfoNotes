<div class="mg-main">

<div class="profile-info-container">
<div class="profile-info-container-update">
<form class="mg-signup-modal-content" action="/profileUpdate" method="post" name='profileUpdate'>
      <h1>Profile Update</h1>
      <div class="error-text" id="signup-error-text">
        
      </div>
      <div class="error-text" id="user-signup-error-text">
        
      </div>
      <hr>
      <div class="row">
        <span class="column">
          <label for="username">Domain name</label>
        </span>
        <span class="column">
          <input type="text" placeholder="Enter Domain Name" name="username" value =<%= user %> id="username" size="40" maxlength="25" pattern="[\S]*" title="Space char Not Accepted" autocomplete="off" disabled >
        </span>
      </div>

      <div class="row">
        <span class="column">
          <label for="username">Gender</label>
        </span>
        <span class="column">
          <input type="text" placeholder="Enter Domain Name" name="gender" value =<%= data.gender %> id="gender" size="40" maxlength="25" pattern="[\S]*" title="Space char Not Accepted" autocomplete="off" disabled >
        </span>
      </div>
      
     <div class="row">
        <span class="column">
          <label for="username">Domain Mail Id</label>
        </span>
        <span class="column">
          <input type="email" placeholder="Mail Id" name="email" id="email" size="40" maxlength="50" pattern="[\S]*" title="Space char Not Accepted" value =<%= data.email %> required autofocus>
        </span>
      </div>
      <div class="row">
        <span class="column">
          <label for="empId">Employee Id</label>
        </span>
        <span class="column">
          <input type="text" placeholder="Enter Domain Name" name="empId" id="emp-id" size="40" maxlength="6" pattern="[\S]*" title="Space char Not Accepted" value =<%= data.empId %> required>
        </span>
      </div>
      <div class="row">
        <span class="column">
          <label for="userRole">Department</label>
         </span>
        <span class="column">
          <select name="userRole"  id="user-role" require >
            <% Object.keys(role).forEach(function(key){ if( data.department == key){%>

              <option value=<%= key %> selected > <%= role[key] %> </option>
              <% } else {%>
              <option value=<%= key %> > <%= role[key] %> </option>
            <% }}) %>
            
          </select>
        </span>
      </div>
      <div class="row"></div>
     
     <!--  <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
      </label> -->

     <!--  <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p> -->
      <div class="row">
        <button type="submit" class="mg-signup-modal-signup" onclick="return validation(event)">Update</button>
      </div>
  </form>
  </div>
  <div class="profile-info-image-container">
    <div class="profile-info-image-container-div"> <img src="./images/user-avatar.png" alt="Avatar" class="profile-image-container" id="profile-avatar" > </div>
  </div>

</div>

<div id='snackbar'> Profile Updated Successfully </div>

